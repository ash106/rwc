<%= simple_form_for @place_of_use_area, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :color, as: :minicolors, input_html: {data: {minicolors: {theme: :bootstrap}}} %>
    <%= f.input :kml %>
    <% if @place_of_use_area.kml_file_name %>
      <p>Current KML File: <%= @place_of_use_area.kml_file_name %></p>
      <% if @place_of_use_area.polygon %>
        <%= content_tag "div", id: "map_canvas", class: "edit_page", data: {feature: {type: "Feature", geometry: @place_of_use_area.polygon}} do %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="form-actions text-center">
    <% if @place_of_use_area.new_record? %>
      <%= f.button :submit, "Create Place of Use Area", class: "btn-block btn-lg" %>
    <% else %>
      <%= f.button :submit, "Update Place of Use Area", class: "btn-block btn-lg" %>
    <% end %>
  </div>
<% end %>
