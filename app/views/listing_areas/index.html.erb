<h1>Listing listing_areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Policy</th>
      <th>Polygon JSON</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listing_areas.each do |listing_area| %>
      <tr>
        <td><%= listing_area.name %></td>
        <td><%= listing_area.policy %></td>
        <td><%= listing_area.polygon.to_s.truncate(140) %></td>
        <td><%= link_to 'Show', listing_area %></td>
        <td><%= link_to 'Edit', edit_listing_area_path(listing_area) %></td>
        <td><%= link_to 'Destroy', listing_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing area', new_listing_area_path %>
