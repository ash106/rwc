<h1>Listing point_of_diversions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_of_diversions.each do |point_of_diversion| %>
      <tr>
        <td><%= point_of_diversion.name %></td>
        <td><%= point_of_diversion.point %></td>
        <td><%= link_to 'Show', point_of_diversion %></td>
        <td><%= link_to 'Edit', edit_point_of_diversion_path(point_of_diversion) %></td>
        <td><%= link_to 'Destroy', point_of_diversion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

