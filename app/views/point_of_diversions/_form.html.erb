<%= simple_form_for @point_of_diversion, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :kml %>
    <% if @point_of_diversion.kml_file_name %>
      <p>Current KML File: <%= @point_of_diversion.kml_file_name %></p>
      <% if @point_of_diversion.point %>
        <div class="row">
          <div class="col-md-4">
            <%= content_tag "div", id: "map_canvas", class: "edit_page", data: {feature: {type: "Feature", geometry: @point_of_diversion.point}} do %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
