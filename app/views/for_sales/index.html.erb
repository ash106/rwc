<h1 class="text-center">For Sales</h1>

<div class="table-responsive">
  <table class="table">
    <% if @for_sales.any? %>
      <thead>
        <tr>
          <th>Volume</th>
          <th>Source</th>
          <th>Description</th>
          <th>Price</th>
          <th>Contact info</th>
          <th>Listing area</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% end %>
    <tbody>
      <%= render(@for_sales) || render('for_sales/empty') %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= link_to 'New For Sale', new_for_sale_path, class: "btn btn-primary" %>
</div>
