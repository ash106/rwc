<%= simple_form_for(@for_sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :volume %>
    <%= f.input :source %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :contact_info %>
    <%= f.association :listing_area %>
  </div>

  <div class="form-actions text-center">
    <% if @for_sale.new_record? %>
      <%= f.button :submit, "Create For Sale", class: "btn-block btn-lg" %>
    <% else %>
      <%= f.button :submit, "Update For Sale", class: "btn-block btn-lg" %>
    <% end %>
  </div>
<% end %>
