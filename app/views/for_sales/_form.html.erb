<%= simple_form_for(@for_sale, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :volume %>
    <%= f.input :source %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :contact_info %>
    <%= f.association :listing_area %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
